#!/bin/bash


# A dmenu wrapper script for system functions.
case "$(readlink -f /sbin/init)" in
	*systemd*) ctl='systemctl' ;;
	*) ctl='loginctl' ;;
esac

# wayland and xorg
if [ $XDG_SESSION_TYPE = "wayland" ]; then
  menu=("wofi --dmenu --lines 8 --width 300 --xoffset 1618 --yoffset 3 -p Action: ")
  lock=(swaylock)
else
  menu=("dmenu -i -p 'Action: '")
  lock=(slock)
fi


case "$(printf "ğŸ”’ lock\nğŸšª leave Hyprland\nğŸ» hibernate\nğŸ”ƒ reboot\nğŸ–¥ï¸shutdown\nğŸ’¤ sleep" | $menu)" in
	'ğŸ”’ lock') $lock ;;
	"ğŸšª leave Hyprland") kill -TERM $(pgrep -u $USER "\bHyprland") ;;
	'ğŸ’¤ sleep') $ctl suspend -i ;;
	'ğŸ» hibernate') $ctl hibernate -i ;;
	'ğŸ”ƒ reboot') $ctl reboot -i ;;
	'ğŸ–¥ï¸shutdown') $ctl poweroff -i ;;
	*) exit 1 ;;
esac
